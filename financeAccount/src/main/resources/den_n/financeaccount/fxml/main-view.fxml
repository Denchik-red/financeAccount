<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="den_n.financeaccount.MainController"
      styleClass="root" spacing="20" prefWidth="800" prefHeight="600">

    <!-- Верхняя панель -->
    <HBox alignment="CENTER_LEFT" spacing="20" styleClass="header">
        <ImageView fitWidth="30" fitHeight="30">
<!--            <Image url="@../images/apple_logo.png" />-->
        </ImageView>
        <Label text="Tolttech" styleClass="app-title" />

        <HBox HBox.hgrow="ALWAYS" alignment="CENTER_RIGHT">
            <Button text="New transaction" styleClass="btn-secondary" />
            <Button styleClass="btn-circle">
                <graphic>
                    <ImageView fitWidth="24" fitHeight="24">
<!--                        <Image url="@../icons/plus_icon.png" />-->
                    </ImageView>
                </graphic>
            </Button>
        </HBox>
    </HBox>

    <!-- Заголовок -->
    <VBox spacing="5">
        <Label text="Total Balance" styleClass="title" />
        <Label text="aggregated account Funds" styleClass="subtitle" />
    </VBox>

    <!-- Список карточек -->
    <VBox id="accountList" spacing="15" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
        <!-- Карточка 1 -->
        <HBox styleClass="card" style="-fx-background-color: linear-gradient(to right, #00d4ff, #3a2c5e);">
            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label text="Savings" styleClass="card-label" />
                <Label text="1,250" styleClass="card-amount" />
            </VBox>
            <HBox alignment="CENTER_RIGHT" spacing="10" HBox.hgrow="NEVER">
                <Label text="+ $1,250 income / $870" styleClass="card-info" />
                <Button text="Monthly →" styleClass="btn-small" />
            </HBox>
        </HBox>

        <!-- Карточка 2 -->
        <HBox styleClass="card" style="-fx-background-color: linear-gradient(to right, #00b3cc, #3a2c5e);">
            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label text="Credit Card" styleClass="card-label" />
                <Label text="1,705" styleClass="card-amount" />
            </VBox>
            <HBox alignment="CENTER_RIGHT" spacing="10" HBox.hgrow="NEVER">
                <Label text="+ $1,250 income / $870" styleClass="card-info" />
                <Button text="Monthly →" styleClass="btn-small" />
            </HBox>
        </HBox>

        <!-- Карточка 3 -->
        <HBox styleClass="card" style="-fx-background-color: linear-gradient(to right, #ff7766, #9a5ebd);">
            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label text="Credit Card" styleClass="card-label" />
                <Label text="1,250" styleClass="card-amount" />
            </VBox>
            <HBox alignment="CENTER_RIGHT" spacing="10" HBox.hgrow="NEVER">
                <Label text="+ $1,250 income / $870" styleClass="card-info" />
                <Button text="Monthly →" styleClass="btn-small" />
            </HBox>
        </HBox>
    </VBox>

    <!-- Нижняя панель -->
    <HBox styleClass="footer" spacing="20" alignment="CENTER">
        <Button styleClass="btn-footer">
            <graphic>
                <ImageView fitWidth="20" fitHeight="20">
<!--                    <Image url="@../icons/plus_icon.png" />-->
                </ImageView>
            </graphic>
            <text>Add Account</text>
        </Button>
        <Label text="|"></Label>
        <Button styleClass="btn-footer">
            <graphic>
                <ImageView fitWidth="20" fitHeight="20">
<!--                    <Image url="@../icons/arrow_right.png" />-->
                </ImageView>
            </graphic>
            <text>Add Category</text>
        </Button>
        <HBox HBox.hgrow="ALWAYS" />
        <Button styleClass="btn-footer-icon-only">
            <graphic>
                <ImageView fitWidth="20" fitHeight="20">
<!--                    <Image url="@../icons/arrow_right.png" />-->
                </ImageView>
            </graphic>
        </Button>
    </HBox>

</VBox>